<%= render 'shared/page_title', title: @recipebox.name %>
<div class="row">
  <div class="col-md-4 pull-right center">
    <%= gravatar_for @recipebox.user, size: 200 %>
    <p>
      <h5>Brought to you by: <%= @recipebox.user.username %></h5>
    </p>
  </div>
  <div class="col-md-8">
    <%= link_to "Edit this Recipe", edit_recipebox_path(@recipebox), class: "btn btn-success pull-right" %>
    <h3><%= @recipebox.summary %></h3>
    <div class="will">
      <p>
        <strong>Steps:</strong>
      </p>
      <%= simple_format(@recipebox.description) %>

    </div>
  </div>
</div>

<h5><%= link_to "Return to all Recipes", recipeboxes_path, class: "btn btn-success btn-small" %></h5>
